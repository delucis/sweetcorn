{
	"$schema": "https://json.schemastore.org/tsconfig",
	"compilerOptions": {
		"target": "ESNext",
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"resolveJsonModule": true,
		"erasableSyntaxOnly": true,
		"outDir": "dist",
		"strict": true,
		"noUnusedLocals": true,
		"isolatedDeclarations": true,
		"declaration": true
	},
	"include": ["src"]
}
